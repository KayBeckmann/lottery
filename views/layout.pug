doctype html
html(lang="de")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= pageTitle || 'BTC Verlosung'
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet", href="/css/style.css")
  body
    block header
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container-fluid
          a.navbar-brand(href="/") BTC Lottery
          button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
          .collapse.navbar-collapse
            ul.navbar-nav.me-auto
              if isAuthenticated
                li.nav-item
                  a.nav-link(href="/dashboard") Dashboard
                if currentUser && currentUser.role === 'admin'
                  li.nav-item
                    a.nav-link(href="/admin") Admin
            ul.navbar-nav
              if isAuthenticated
                li.nav-item
                  a.nav-link(href="/auth/logout") Abmelden
              else
                li.nav-item
                  a.nav-link(href="/auth/login") Anmelden

    .container.mt-4
      block content

    footer.footer.mt-auto.py-3.bg-light
      .container
        span.text-muted Copyright &copy; 2025

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")